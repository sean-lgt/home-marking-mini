<!-- components/tabs/index.wxml -->
<!-- tab栏组件 -->
<!-- 引进wxs 监听用户手指滑动 减少性能消耗 -->
<wxs src="../../common/wxs/touchmove.wxs" module="handleTouch" />
<view class="container">
  <view class="tabs">
    <view class="tab-item" wx:for="{{tabs}}" wx:key="index">
      <view class="tab-label {{currentTabIndex === index ? 'active-tab':''}}" data-index="{{index}}" bind:tap="handleSwitchTab">
        {{item}}
      </view>
      <view wx:if="{{currentTabIndex === index}}" class="divider"></view>
    </view>
  </view>
  <!-- 自定义插槽扩展 -->
  <slot name="extend"></slot>
  <!-- 列表展示 -->
  <view class="tab-planel" bind:touchstart="{{handleTouch.handleTouchStart}}" bind:touchend="{{handleTouch.handleTouchEnd}}">
    <!-- 列表插槽 -->
    <slot name="plan"></slot>
    <!-- 安全区域块 -->
    <i-safe-area area="bottom"></i-safe-area>
  </view>
</view>